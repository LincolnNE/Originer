{
  "version": 2,
  "rewrites": [
    {
      "source": "/api/v1/:path*",
      "destination": "/api/serverless/:path*"
    },
    {
      "source": "/health",
      "destination": "/api/serverless/health"
    }
  ],
  "functions": {
    "api/serverless/[...path].ts": {
      "runtime": "@vercel/node",
      "includeFiles": "src/**",
      "excludeFiles": "src/**/*.test.ts"
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
}
